<!DOCTYPE html>
<html âš¡ class="ArticlePage" lang="{{#with language}}{{this}}{{else}}en{{/with}}">
    {{include "/core/page/Page-head.amp.hbs" this}}

    <body class="Page-body" {{~#each extraBodyAttributes}} {{this}} {{~/each~}}>
        {{include "/core/page/Page-header.amp.hbs" this}}


        <div class="ArticlePage-content">
            <div class="ArticlePage-wrapper">
                <main class="ArticlePage-main">
                    <article class="ArticlePage-mainContent">
                        <div class="ArticlePage-lead">
                            {{#with player}}
                                <div class="ArticlePage-player">{{this}}</div>
                            {{/with}}
                        </div>

                        {{include "/core/page/ContentPage-breadcrumbs.amp.hbs" this className="ArticlePage"}}

                        {{include "/core/page/CreativeWorkPage-headline.amp.hbs" this className="ArticlePage" kickerText=kicker}}

                        {{#with actions}}
                            <div class="ArticlePage-actions">
                                {{this}}
                            </div>
                        {{/with}}

                        {{include "/core/page/CreativeWorkPage-subHeadline.amp.hbs" this className="ArticlePage"}}
                            <div class="ArticlePage-articleContainer">
                            {{#with description}}
                                <div class="ArticlePage-articleBody">
                                    <div class="RichTextArticleBody">
                                        <div class="RichTextArticleBody-body">
                                            {{this}}
                                        </div>
                                    </div>
                                </div>
                            {{/with}}
                            <hr />
                        </div>
                    </article>

                    {{include "/core/page/ContentPage-tags.amp.hbs" this className="ArticlePage"}}
                    {{include "/core/page/CreativeWorkPage-authorInfo.amp.hbs" this className="ArticlePage"}}
                    {{include "/core/page/CreativeWorkPage-contentFooter.amp.hbs" this className="ArticlePage"}}
                </main>

                {{include "/core/page/Page-aside.amp.hbs" this className="ArticlePage"}}
            </div>
        </div>

        {{include "/core/page/Page-below.amp.hbs" this}}
        {{include "/core/page/Page-footer.amp.hbs" this}}

        {{include "/core/page/Page-extraBodyItems.amp.hbs" this}}
    </body>
</html>
