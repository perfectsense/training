{{#if items}}
<div class="PageListRightRailD" data-module{{include "includes/PageList-attributes.hbs" this}}>
    {{#if title}}
        {{include "includes/PageList-header.hbs" this}}
    {{/if}}

    <div class="PageList-items">
        {{#each items}}
            <div class="PageList-items-item">
                {{include "/page/promo/PagePromo.hbs" this imagePositionVertical="top" animateOnScroll=../../animateOnScroll animation="fromBottom"}}
            </div>
        {{/each}}
    </div>

    {{include "includes/PageList-footer.hbs" this}}
</div>
{{/if}}
