<!DOCTYPE html>
<html class="PersonPage" {{~include "/page/Page-htmlAttributes.hbs" this}}>
    {{include "/page/Page-head.hbs" this}}

    <body class="Page-body">
        {{include "/page/Page-bodyStart.hbs" this}}
        {{include "/page/Page-header.hbs" this}}
        <div data-moduleroot>
            {{include "/page/Page-above.hbs" this}}

            <main class="Page-content">
                <div class="Page-twoColumn">
                    <div class="Page-main">
                        <div class="PersonPage-intro">
                            {{#with image}}
                                {{#set imageSize="medium-square"}}
                                    <div class="PersonPage-image">{{this}}</div>
                                {{/set}}
                            {{/with}}

                            <div class="PersonPage-info">
                                {{#with name}}
                                    <h1 class="PersonPage-name">{{this}}</h1>
                                {{/with}}
                                {{#with jobTitle}}
                                    <div class="PersonPage-jobTitle">{{this}}</div>
                                {{/with}}
                                {{#with personSocialLinks}}
                                    <div class="PersonPage-socialLinks">{{this}}</div>
                                {{/with}}
                            </div>
                        </div>

                        {{#with fullBiography}}
                            <div class="Page-articleBody">
                                <div class="PersonPage-biography">
                                    <div class="PersonPage-biography-content">
                                        {{#set imageSize="medium-4x3"}}
                                            <div class="RichTextBody">{{this}}</div>
                                        {{/set}}
                                    </div>
                                </div>
                            </div>
                        {{/with}}

                        {{#with main}}
                            <div class="PersonPage-related-content">
                                {{#each this}}
                                    {{this}}
                                {{/each}}
                            </div>
                        {{/with}}

                        {{include "/page/Page-commenting.hbs" this}}
                    </div>

                    {{#if aside}}
                        <aside class="Page-aside">
                            {{aside}}
                        </aside>
                    {{/if}}
                </div>
            </main>

            {{include "/page/Page-below.hbs" this}}
        </div>
        {{include "/page/Page-footer.hbs" this}}
        {{include "/page/Page-extraBodyItems.hbs" this}}
    </body>
</html>
