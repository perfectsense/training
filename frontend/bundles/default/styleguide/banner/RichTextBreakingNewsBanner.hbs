{{!!-- This has the complicated hbs name to match the View/VM,
       but we rather use this simple Banner name inside the HTML, CSS, and JS}}
<bsp-banner class="Banner">
    <div class="Banner-content">
        {{#with items}}
            <div class="Banner-items">
                {{this}}
            </div>
        {{/with}}
    </div>
    <button class="Banner-close" data-toggle-trigger="banner">
        <span class="sr-only">{{format "/banner/Banner" "closeText"}}</span>
        {{include (iconPath 'x')}}
    </button>
</bsp-banner>
