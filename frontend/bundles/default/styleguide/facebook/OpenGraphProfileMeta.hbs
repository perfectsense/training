<meta property="og:type" content="profile">
{{#with firstName}}
    <meta property="profile:first_name" content="{{this}}">
{{/with}}

{{~#with lastName}}
    <meta property="profile:last_name" content="{{this}}">
{{/with}}

{{~#with username}}
    <meta property="profile:username" content="{{this}}">
{{/with}}

{{~#with gender}}
    <meta property="profile:gender" content="{{this}}">
{{/with}}