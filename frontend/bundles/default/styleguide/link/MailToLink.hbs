<a class="ActionLink" href="mailto:{{email}}?
    {{~#with cc}}cc={{this}}&{{~/with~}}
    {{~#with bcc}}bcc={{this}}&{{~/with~}}
    {{~#with subject}}subject={{this}}&{{~/with~}}
    {{~#with emailBody}}body={{this}}{{~/with~}}"
    data-social-service="mailto">
    {{include (iconPath 'envelope-simple')}}
    <span>
        {{format "MailText"}}
    </span>
</a>
