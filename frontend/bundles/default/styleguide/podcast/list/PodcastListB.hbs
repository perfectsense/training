<bsp-list-loadmore class="PodcastListB" data-module {{include "/page/list/includes/PageList-attributes.hbs" this}}>
    {{include "/global/ModuleHeader.hbs" this}}

    {{#with items}}
        <ul class="PodcastListB-items">
            {{#each this}}
                <li class="PodcastListB-items-item" data-list-loadmore-items>
                    {{#eq this._template "/podcast/promo/PodcastPromo.hbs"}}
                        {{include "/podcast/promo/PodcastPromoB.hbs" this}}
                    {{else}}
                        {{render this}}
                    {{/eq}}
                </li>
            {{/each}}
        </ul>
    {{/with}}
    {{include "/page/list/includes/PageList-footer.hbs" this canPaginate=true}}
</bsp-list-loadmore>
