<!DOCTYPE html>
<html class="PodcastEpisodePage" {{~include "/page/Page-htmlAttributes.hbs" this}}>
{{include "/page/Page-head.hbs" this}}

<body class="Page-body">
    {{include "/page/Page-bodyStart.hbs" this}}
    {{include "/page/Page-header.hbs" this}}
    <div data-moduleroot>
        {{include "/page/Page-above.hbs" this}}

        <main class="Page-content">
            <div class="Page-twoColumn">
                <div class="Page-main">
                    <div class="PodcastEpisodePage-intro">
                        {{#with image}}
                            {{#set imageSize="medium-square"}}
                                <div class="PodcastEpisodePage-image">{{this}}</div>
                            {{/set}}
                        {{/with}}

                        <div class="PodcastEpisodePage-introTopRow">
                            {{include "/page/Page-breadcrumbs.hbs" this}}
                            {{include "/page/Page-headline.hbs" this}}
                        </div>

                        <div class="PodcastEpisodePage-introBottomRow">
                            {{include "/page/Page-subHeadline.hbs" this}}

                            {{#each primaryAudio}}
                            <div class="PodcastEpisodePage-player">
                                {{include "/audio/HTML5AudioPlayerB.hbs" this}}
                            </div>
                            {{/each}}
                        </div>
                    </div>

                    {{#with body}}
                        <div class="Page-articleBody">
                            {{#set imageSize="medium-4x3"}}
                                <div class="RichTextBody">{{this}}</div>
                            {{/set}}
                        </div>
                    {{/with}}

                    {{#each podcast}}
                        <div class="PodcastEpisodePage-podcast">
                            {{include "/podcast/promo/PodcastPromoD.hbs" this}}
                        </div>
                    {{/each}}

                    {{#with main}}
                        <div class="PodcastEpisodePage-related-content">
                            {{#each this}}
                                {{this}}
                            {{/each}}
                        </div>
                    {{/with}}
                </div>

                {{#if aside}}
                    <aside class="Page-aside">
                        {{aside}}
                    </aside>
                {{/if}}
            </div>
        </main>

        {{include "/page/Page-below.hbs" this}}
    </div>
    {{include "/page/Page-footer.hbs" this}}
    {{include "/page/Page-extraBodyItems.hbs" this}}
</body>
</html>
