{{#if items}}
<div class="PageListStandardI" data-module{{include "includes/PageList-attributes.hbs" this headerTextAlign=(fallback headerTextAlign "center")}}>
    {{include '/global/ModuleHeader.hbs' this}}
    <div class="PageList-items">
        <div class="PageList-items-item">
            {{#with items.[0]}}
                {{#if (contains _template "/page/promo/PagePromo.hbs")}}
                    {{#set imageSize=(fallback ../itemImageAspectRatio "large-16x9")}}
                        {{include "/page/promo/PagePromoModuleA.hbs" this}}
                    {{/set}}
                {{else}}
                    {{render this}}
                {{/if}}
            {{/with}}
        </div>
        {{#each items}}
            {{#if (gt @index 0)}}
                <div class="PageList-items-item">
                    {{#if (contains _template "/page/promo/PagePromo.hbs")}}
                        {{#set imageSize=(fallback ../itemImageAspectRatio "large-16x9")}}
                            {{#if (eq ../listColumns234 "2")}}
                                {{#set sizes="(max-width: 1024px) 100vw, 1024px"}}
                                    {{include "/page/promo/PagePromo.hbs" this mobileAltLayout="true"}}
                                {{/set}}
                            {{else}}
                                {{include "/page/promo/PagePromo.hbs" this mobileAltLayout="true"}}
                            {{/if}}
                        {{/set}}
                    {{else}}
                        {{render this}}
                    {{/if}}
                </div>
            {{/if}}
        {{/each}}
    </div>

    {{include "includes/PageList-footer.hbs" this}}
</div>
{{/if}}
