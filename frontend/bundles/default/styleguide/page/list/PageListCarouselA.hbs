{{#if items}}
<bsp-listcarousel class="PageListCarouselA" data-module{{include "includes/PageList-attributes.hbs" this}}>
    {{include "/global/ModuleHeader.hbs" this}}

    {{#with items}}
        <div class="PageList-items">
            {{#each this}}
                <div class="PageList-items-item">
                    {{#set lazyLoad="flickity"}}
                        {{#eq this._template "/page/promo/PagePromo.hbs"}}
                            {{#eq ../../listColumns234 "2"}}
                                {{#set imageSize=(fallback ../../itemImageAspectRatio "large-16x9")}}
                                    {{include "/page/promo/PagePromo.hbs" this media=(or ../../hideImages then=null otherwise=media) imagePositionVertical="top"}}
                                {{/set}}
                            {{else}}
                                {{#set imageSize=(fallback ../../itemImageAspectRatio "medium-16x9")}}
                                    {{include "/page/promo/PagePromo.hbs" this media=(or ../../hideImages then=null otherwise=media) imagePositionVertical="top"}}
                                {{/set}}
                            {{/eq}}
                        {{else}}
                            {{render this}}
                        {{/eq}}
                    {{/set}}
                </div>
            {{/each}}
        </div>
    {{/with}}
    {{include "includes/PageList-footer.hbs" this}}
</bsp-listcarousel>
{{/if}}
