{{#if items}}
<div class="PageListRightRailB" data-module {{include "includes/PageList-attributes.hbs" this}}>
    {{include "/global/ModuleHeader.hbs" this}}

    {{#with items}}
        {{#if ../showListNumbers}}<ol{{else}}<ul{{/if}} class="PageList-items"{{#if ../showListNumbers}} data-with-numbers{{/if}}>
            {{#each this}}
            <li class="PageList-items-item">

                    {{#eq this._template "/page/promo/PagePromo.hbs"}}
                        {{#set imageSize=(fallback ../itemImageAspectRatio "small-square")}}
                            {{include "/page/promo/PagePromo.hbs" this description=null imagePositionHorizontal=(fallback ../../itemAlignment (fallback ../../itemImageAlignment "right"))}}
                         {{/set}}
                    {{else}}
                        {{render this}}
                    {{/eq}}

            </li>
            {{/each}}
        {{#if ../showListNumbers}}</ol>{{else}}</ul>{{/if}}
    {{/with}}
    {{include "includes/PageList-footer.hbs" this}}
</div>
{{/if}}
