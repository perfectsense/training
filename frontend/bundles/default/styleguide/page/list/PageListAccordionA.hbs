{{#if items}}
    <div class="PageListAccordionA" data-module {{include "includes/PageList-attributes.hbs" this}}>
        {{include "/global/ModuleHeader.hbs" this}}

        {{#with items}}
            <div class="PageList-items">
                {{#each this}}
                    <div class="PageList-items-item">
                        {{#eq this._template "/page/promo/PagePromo.hbs"}}
                            <bsp-accordion class="PagePromo">
                                <div class="PagePromo-header" data-accordion-header>
                                    {{#if title}}
                                        <div class="PagePromo-title">
                                            {{include "/link/Link.hbs" href=url target=target body=title}}
                                            <span class="iconPlus">
                                                {{include (iconPath 'plus')}}
                                            </span>
                                            <span class="iconMinus">
                                                {{include (iconPath 'minus')}}
                                            </span>
                                        </div>
                                    {{/if}}
                                </div>
                                <div data-accordion-body>
                                    <div class="PagePromo-wrapper">
                                        {{include "../promo/includes/PagePromoDescription.hbs" this}}
                                        {{include "../promo/includes/PagePromoCtaLink.hbs" this ctaButtonText=(fallback ctaButtonText (format "/page/list/PageList" "ctaText"))}}
                                    </div>
                                </div>
                            </bsp-accordion>
                        {{else}}
                            {{render this}}
                        {{/eq}}
                    </div>
                {{/each}}
            </div>
        {{/with}}

        {{include "includes/PageList-footer.hbs" this}}
    </div>
{{/if}}
