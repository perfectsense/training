<table class="NewsletterHeader" width="100%" cellspacing="0" cellpadding="0">
    <tr>
       <td align="center">
            <table width="100%" cellspacing="0" cellpadding="0">
                {{#with publishDate}}
                    <tr>
                        <td class="NewsletterHeader-date" align="center">{{this}}</td>
                    </tr>
                {{/with}}
                {{#each media}}
                    <tr>
                        <td class="NewsletterHeader-media" align="center">
                            {{#resize image "logo"}}
                                <img class="Image" alt="{{../alt}}"
                                    {{~#with width}} width="{{this}}"{{/with~}}
                                    {{~#with height}} height="{{this}}"{{/with~}}
                                    src="{{src}}"
                                >
                            {{/resize}}
                        </td>
                    </tr>
                {{/each}}
                {{#with title}}
                    <tr>
                        <td class="NewsletterHeader-title" align="center">{{this}}</td>
                    </tr>
                {{/with}}
            </table>
       </td>
    </tr>
</table>
