<div class="RadioInput">
    {{~#with errors}}
        <div class="RadioInput-errors">
            {{~this~}}
        </div>
    {{/with~}}

    <label class="RadioInput-label">
        <input type="radio"
            {{~#with checked}} checked{{/with}}
            {{~#with inputName}} name="{{this}}"{{else}} name="textinput"{{/with}}
            {{~#with inputValue}} value="{{this}}"{{/with}}
            {{~#with disabled}} disabled{{/with}}>

            <span class="unchecked">
                {{include (iconPath 'circle')}}
            </span>
            <span class="checked">
                {{include (iconPath 'radio-button' 'fill')}}
            </span>

            <span>
                {{label}}
            </span>

            {{~#with description}}
                <div class="RadioInput-description">
                    {{~this~}}
                </div>
            {{/with~}}
    </label>
</div>
