# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
continuation_indent_size = 8
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.hbs]
insert_final_newline = false

[{package.json,.travis.yml,*.js,*.ts,*.css,*.less,*.json}]
indent_size = 2
