{
  "name": "brightspot-theme-core",
  "version": "1.0.0-SNAPSHOT",
  "private": true,
  "engines": {
    "node": "18.17.1"
  },
  "devDependencies": {
    "@babel/core": "7.21.8",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-runtime": "7.21.4",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.24.7",
    "@brightspot/styleguide": "4.7.16",
    "@typescript-eslint/eslint-plugin": "6.4.1",
    "@typescript-eslint/parser": "6.4.1",
    "@vimeo/player": "2.18.0",
    "artifactory-publisher": "1.1.4",
    "autoprefixer": "10.4.20",
    "babel-loader": "9.1.3",
    "capitalize": "1.0.0",
    "css-loader": "7.1.2",
    "cssnano": "7.0.2",
    "eslint": "8.37.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-n": "15.7.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-webpack-plugin": "3.2.0",
    "file-loader": "6.2.0",
    "fork-ts-checker-webpack-plugin": "9.0.2",
    "fs-extra": "11.2.0",
    "js-yaml": "4.1.0",
    "less": "4.2.0",
    "less-loader": "12.2.0",
    "mini-css-extract-plugin": "2.9.0",
    "postcss": "8.4.40",
    "postcss-loader": "8.1.1",
    "prettier": "2.8.8",
    "style-loader": "4.0.0",
    "typescript": "5.1.6",
    "url-loader": "4.1.1",
    "webpack": "5.76.3",
    "webpack-bundle-analyzer": "4.8.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "3.11.3",
    "webpack-merge": "5.8.0"
  },
  "dependencies": {
    "@babel/runtime": "7.21.5",
    "@phosphor-icons/core": "2.1.1",
    "@types/flickity": "2.2.11",
    "babel-plugin-prismjs": "2.1.0",
    "flickity": "2.3.0",
    "hoverintent": "2.2.1",
    "patch-package": "6.5.1",
    "picturefill": "3.0.3",
    "prismjs": "1.24.1",
    "sanitize.css": "13.0.0"
  },
  "scripts": {
    "build": "yarn lint && webpack --config webpack.helpers.js && webpack --config webpack.prod.js && node node_modules/@brightspot/styleguide/build/bundle -b build/styleguide -o build/theme.zip $STYLEGUIDE_BUILD_OPTS",
    "build:no-code-splitting": "yarn lint && webpack --config webpack.helpers.js && webpack --config webpack.prod-no-code-splitting.js && node node_modules/@brightspot/styleguide/build/bundle -b build/styleguide -o build/theme.zip $STYLEGUIDE_BUILD_OPTS",
    "format": "yarn run eslint . --fix",
    "lint": "yarn lint:js && yarn lint:ts",
    "lint:js": "yarn run eslint .",
    "lint:ts": "tsc --noEmit",
    "postinstall": "patch-package && node phosphor-icons/install.js",
    "profile": "webpack --config webpack.profile.js",
    "server:styleguide": "webpack serve --config webpack.dev.js"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
